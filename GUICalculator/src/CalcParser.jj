{	root=atai()
	(	  <DOT> node=atai(){	 	root = root.add(node.divide(new BigDecimal(Math.pow(10,node.toString().length()))));
	  }	)*{return root;}
}
private BigDecimal atai() :
{
  BigDecimal node;
}
{
	node=num() { return node; }
	|<OPEN> node=sum() <CLOSE> {return node;}
}

